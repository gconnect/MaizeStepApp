<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".common.ui.DetailedFragment">

            <FrameLayout
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/insect_image"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="300dp"/>

                <ImageView
                    android:id="@+id/back"
                    android:padding="@dimen/margin_16"
                    app:srcCompat="@drawable/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_16"
                    android:src="@drawable/image"
                    android:layout_marginTop="200dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

            </FrameLayout>


            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:layout_margin="@dimen/margin_16"
                app:layout_constraintBottom_toBottomOf="@id/longitude"
                app:layout_constraintTop_toTopOf="@id/latitude"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/background"
                app:srcCompat="@drawable/ic_location_on_black_24dp" />

            <TextView
                android:id="@+id/latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_20"
                android:text="Latitude"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintLeft_toRightOf="@id/locationIcon"
                app:layout_constraintTop_toBottomOf="@id/background" />
            <TextView
                android:id="@+id/location_lat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_20"
                android:text="NS"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintLeft_toRightOf="@id/latitude"
                app:layout_constraintTop_toBottomOf="@id/background" />

            <TextView
                android:id="@+id/longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_20"
                android:text="Longitude"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintLeft_toRightOf="@id/locationIcon"
                app:layout_constraintTop_toBottomOf="@id/location_lat" />

            <TextView
                android:id="@+id/location_long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_20"
                android:text="EW"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintLeft_toRightOf="@id/longitude"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/location_lat" />

            <View
                android:id="@+id/locationDivider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="@dimen/margin_16"
                android:background="@color/grey"
                app:layout_constraintTop_toBottomOf="@id/location_long" />

            <ImageView
                android:id="@+id/calendarIcon"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:layout_margin="@dimen/margin_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/locationDivider"
                app:srcCompat="@drawable/ic_event" />

            <TextView
                android:id="@+id/calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_20"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintLeft_toRightOf="@id/calendarIcon"
                app:layout_constraintTop_toBottomOf="@id/locationDivider" />

            <View
                android:id="@+id/calendarDivider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="@dimen/margin_16"
                android:background="@color/grey"
                app:layout_constraintTop_toBottomOf="@id/calendarIcon" />

            <ImageView
                android:id="@+id/timeIcon"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:layout_margin="@dimen/margin_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/calendarDivider"
                app:srcCompat="@drawable/ic_access_time_black_24dp" />

            <TextView
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_20"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintLeft_toRightOf="@id/timeIcon"
                app:layout_constraintTop_toBottomOf="@id/calendarDivider" />

            <View
                android:id="@+id/timeDivider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="@dimen/margin_16"
                android:background="@color/grey"
                app:layout_constraintTop_toBottomOf="@id/timeIcon" />

            <ImageView
                android:id="@+id/countIcon"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:layout_margin="@dimen/margin_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/timeDivider"
                app:srcCompat="@drawable/ic_show_chart_black_24dp" />

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_20"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintLeft_toRightOf="@id/countIcon"
                app:layout_constraintTop_toBottomOf="@id/timeDivider" />


            <TextView
                android:id="@+id/countTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_20"
                android:text="count"
                android:layout_marginBottom="@dimen/margin_16"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintLeft_toRightOf="@id/count"
                app:layout_constraintTop_toBottomOf="@id/timeDivider" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/shareFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_16"
                app:backgroundTint="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="@id/background"
                app:layout_constraintTop_toBottomOf="@id/background"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/ic_share_white" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>